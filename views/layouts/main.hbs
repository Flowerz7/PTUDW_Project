<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

   	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <link href="https://vjs.zencdn.net/7.10.2/video-js.css" rel="stylesheet" />
    <script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>

    <link rel="stylesheet" href="/css/home.css">

    <title>Online Academy</title>
</head>

<body style="visibility: hidden;" onload="document.body.style.visibility='visible'">
    <nav class="navbar navbar-expand-sm">
        <a href="/" class="navbar-brand"><b>Online Academy</b></a>

        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/" class="nav-link"><b>Home</b></a>
                </li>
                <li class="nav-item dropdown">
                    <a href="/course/all" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown"><b>Category</b></a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {{#each categories}}
                        <div class="dropdown-item">
                            <a href="/courses/{{name}}" >{{name}}</a>
                            <div class="subcate-section card">
                                <div class="card-body">
                                    {{#each subcates}}
                                        <a href="/courses/category/{{this}}" class="dropdown-item">{{this}}</a>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                            
                        {{/each}}
                    </div>
                </li>
                {{#if isAuth}}
                    <li class="nav-item"><a href="/account/view?username={{username}}" class="nav-link"><b>Profile</b></a></li>
                {{/if}}
            </ul>
            <form  action="/courses/search">
                <input class="form-control" type="text" name="q" placeholder="Search">
                <button class="btn btn-primary" type="submit">Search</button>
            </form>
            <div class="auth-control">
                {{#unless isAuth}}
                    <a href="/account/register"><b>Sign up</b></a>
                    <button type="button" class="btn btn-primary" onclick="window.location='/account/login'">Login</button>
                {{else}}
                <a href="/account/logout" class="btn btn-danger">Log out</a>
                {{/unless}}
            </div>
            
        </div>
    </nav>

    {{{body}}}
    {{{_sections.scripts}}}

    <noscript>
        <style>
            body{
                visibility: visible;
            }
        </style>
    </noscript>

</body>

<script>
    $(document).ready(() => {
        $('.dropdown-menu > .dropdown-item').mouseenter((e) => {
            e.preventDefault()
            $(e.target).children('.subcate-section').css('display', 'block')
        })

        $('.dropdown-menu > .dropdown-item').mouseleave((e) => {
            e.preventDefault()
            $(e.target).children('.subcate-section').css('display', 'none')
        })

        $('.subcate-section').mouseleave((e) => {
            e.preventDefault()
            $(e.target).css('display', 'none')
        })
    })
</script>

</html>
