<div class="card">
  <div class="card-header">Teachers</div>
  <div class="card-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">email</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.teachers}} 
      <tr>
        <th scope="row">{{order}}</th>
        <td>{{username}}</td>
        <td>{{email}}</td>
        <td>
          <form style="display: inline-block;" action="/admin/teachers/delete" method="post">
            <input type="hidden" name="teacherID" value="{{teacherID}}">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
          <form style="display: inline-block;" action="/admin/teachers/detail"
            method="post">
            <input type="hidden" name="teacherID" value="{{teacherID}}">
            <button type="submit" class="btn btn-sm btn-primary">Detail</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
  </div>
    <div class="card-footer text-muted">
      <a href="/admin/teachers/add" class="btn-sm btn btn-primary">Add teacher</a>
    </div>
</div>
