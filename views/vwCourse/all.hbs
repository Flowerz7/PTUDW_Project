{{#each Courses}}
  <div class="card" id="{{this._id}}">
    <img class="card-img-top" src="{{this.avatarLink}}">
    <div class="card-body">
      <h4 class="card-title">{{this.title}}</h4>
      <p class="card-text">
        {{this.price}}
      </p>
      <a href="/courses?id={{this._id}}" class="btn btn-primary">Detail</a>
    </div>
  </div>
{{/each}}

{{#if last}}
<nav>
  <ul class="pagination">
    {{#if start}}
    <li class="page-item"><a class="page-link" href="?page={{current}}">Previous</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="?page={{dec current}}">Previous</a></li>
    <li class="page-item"><a class="page-link" href="?page={{decBy2 current}}">{{decBy2 current}}</a></li>
    <li class="page-item"><a class="page-link" href="?page={{dec current}}">{{dec current}}</a></li>
    {{/if}}
    <li class="page-item"><a class="page-link active" href="?page={{current}}">{{current}}</a></li>
    <li class="page-item"><a class="page-link" href="?page={{current}}">Next</a></li>
  </ul>
</nav>
{{else}}
