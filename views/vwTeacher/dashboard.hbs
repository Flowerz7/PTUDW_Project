<div class="table-container">
  <h1 class="teacher" >Courses management</h1>
		<table class="table table-borderless table-hover">
      <a href="/teacher/add" class="adding-resource
                                     adding-resource-teacher"><i class="fas fa-plus"></i></a>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Course title</th>
      <th scope="col">Category</th>
      <th scope="col">Participants</th>
      <th scope="col">Status</th>
      <th class="handle-col-lg" scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.courses}} 
      <tr>
        <th scope="row">{{order}}</th>
        <td>{{title}}</td>
        <td>{{category}}</td>
        <td>{{numOfStudent}}</td>
        <td>{{status}}</td>
        <td class="handle-col-lg">
          <a href="/teacher/update/{{courseID}}"  class="btn btn-sm
            btn-primary">Update</a>

          {{#unless isFinish}}
          <a href="/teacher/videos/{{courseID}}"  class="btn btn-sm
            btn-primary">Modify</a>
          <a href="/teacher/complete/{{courseID}}"  class="btn btn-sm
            btn-danger">Complete</a>
          {{/unless}}

        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
