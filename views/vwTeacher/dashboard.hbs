<div class="card">
  <div class="card-header">
    <a class="btn btn-primary" href="/teacher/add" style="display: inline-block;">Add course</a>
  </div>
  <div class="card-body">
		<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Course title</th>
      <th scope="col">Participants</th>
      <th scope="col">status</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.courses}} 
      <tr>
        <th scope="row">{{order}}</th>
        <td>{{title}}</td>
        <td>{{numOfStudent}}</td>
        <td>{{status}}</td>
        <td>
          <form style="display: inline-block;" action="/admin/courses/delete" method="post">
            <input type="hidden" name="courseID" value="{{courseID}}">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
          <form style="display: inline-block;" action="/admin/courses/detail"
            method="post">
            <input type="hidden" name="courseID" value="{{courseID}}">
            <button type="submit" class="btn btn-sm btn-primary">Detail</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</div>
